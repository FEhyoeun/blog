{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../../packages/*"]
    },
    "typeRoots": ["./global.d.ts",
      "./node_modules/@types"]
  },
  "include": ["global.d.ts", "next-env.d.ts",
    "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"]
}
